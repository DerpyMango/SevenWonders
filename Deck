import java.io.File;
import java.io.IOException;
import java.util.ArrayList;
import java.util.Collections;
import java.util.Scanner;
//https://www.ultraboardgames.com/7wonders/ the prereq might be here, put null if it doesnt have
public class Deck 
{
	private ArrayList<Card> cards;
	public Deck(int age) throws IOException
	{
		Scanner in = new Scanner(new File("CardData.txt"));
		
		cards = new ArrayList<Card>();
		String cost,name,color;
		int a;
		while(in.hasNextLine())
		{
			Scanner sc = new Scanner(in.nextLine());
			a=sc.nextInt();
			if(a == age)
			{
				color = sc.next().trim();
				name = sc.next();
				name = name.replaceAll("_", " ");
				System.out.println(color+name+a);
				if(color.equals("Brown")||color.equals("Grey"))
				{
					cards.add(new ResourceCard(sc.next(),name,color,age,sc.next(),sc.nextBoolean()));
				}
				else if(color.equals("Blue"))
				{
					cards.add(new CivilCard(name,sc.next(),color,age,sc.nextInt()));
				}
				else if(color.equals("Gold"))
				{
					cards.add(new CommCard(name,sc.next(),color,age,sc.nextLine()));
				}
				else if(color.equals("Red"))
				{
					cards.add(new MilCard(name,sc.next(),color,age,sc.nextInt()));
					
				}
				else if(color.equals("Green"))
				{
					cards.add(new SciCard(name,sc.next(),color,age,sc.next()));
					
				}
				else if(color.equals("Purple"))
				{
					cards.add(new GuildCard(name,sc.next(),color,age,sc.nextLine()));
					
				}
				sc.nextLine();
			}
		}
		shuffle();
	}
	public Card deal()
	{
		return cards.remove(0);
	}
	public void shuffle()
	{
		Collections.shuffle(cards);
	}
	public void print()
	{
		for(int x=0;x<cards.size();x++)
		{
			cards.get(x).print();
		}
	}
}
